{
  "id": "${id}",
  "title": "${title}",
  "description": "${description}",
  "flow": [
    {
      "implementor": "com.reedelk.rest.component.RESTListener",
      "description": "POST Hello World REST Listener",
      "configuration": {"ref": "${configId}"},
      "path": "/message",
      "method": "POST",
      "streaming": "AUTO",
      "response": {
        "body": "#[message.payload()]",
        "status": 200
      },
      "errorResponse": {
        "body": "#[error]",
        "status": 500
      }
    },
    {
      "implementor": "com.reedelk.core.component.PayloadSet",
      "description": "Prefix 'Hello World' to POST data",
      "mimeType": "text/plain",
      "payload": "#['Hello World ' + message.payload()]"
    }
  ]
}
