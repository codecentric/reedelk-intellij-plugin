<idea-plugin>
    <id>com.esb.intellij.designer</id>
    <name>ESB Flow Designer</name>
    <vendor email="support@esb.com" url="http://www.esb.com">ESB</vendor>

    <description>
        <![CDATA[
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File Templates -->
        <internalFileTemplate name="Maven Module"/>
        <internalFileTemplate name="Maven Project"/>

        <!-- Module Builder -->
        <moduleBuilder builderClass="com.esb.plugin.module.ESBModuleBuilder" id="ESB_MODULE_BUILDER" order="first"/>

        <!-- Services -->
        <applicationService serviceInterface="com.esb.plugin.service.runtime.ESBRuntimeService"
                            serviceImplementation="com.esb.plugin.service.runtime.impl.ESBRuntimeServiceImpl"/>

        <projectService serviceInterface="com.esb.plugin.service.project.ESBProjectService"
                        serviceImplementation="com.esb.plugin.service.project.impl.ESBProjectServiceImpl"/>
        <projectService serviceInterface="com.esb.plugin.service.project.ESBProjectRuntimeService"
                        serviceImplementation="com.esb.plugin.service.project.impl.ESBProjectRuntimeServiceImpl"/>

        <moduleService serviceInterface="com.esb.plugin.service.module.ESBModuleRuntimeService"
                       serviceImplementation="com.esb.plugin.service.module.impl.ESBModuleRuntimeServiceImpl"/>

        <!-- Run Configurations -->
        <configurationType implementation="com.esb.plugin.runconfig.runtime.ESBRuntimeRunConfigurationType"/>
        <configurationType implementation="com.esb.plugin.runconfig.runtime.ESBRuntimeRunConfigurationType"/>

    </extensions>

    <actions>

    </actions>

</idea-plugin>