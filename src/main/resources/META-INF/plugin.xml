<idea-plugin>
    <id>com.esb.intellij.designer</id>
    <name>ESB Flow Designer</name>
    <vendor email="support@esb.com" url="http://www.esb.com">ESB</vendor>

    <description>
        <![CDATA[
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">

        <!-- File Type -->
        <fileTypeFactory implementation="com.esb.plugin.filetype.FlowFileTypeFactory"/>
        <fileTypeFactory implementation="com.esb.plugin.filetype.SubFlowFileTypeFactory"/>
        <fileTypeFactory implementation="com.esb.plugin.filetype.FlowConfigFileTypeFactory"/>

        <!-- File Editor -->
        <fileEditorProvider implementation="com.esb.plugin.editor.FlowDesignerEditorProvider"/>
        <fileEditorProvider implementation="com.esb.plugin.editor.SubFlowDesignerEditorProvider"/>

        <!-- File Templates -->
        <internalFileTemplate name="Maven Module"/>
        <internalFileTemplate name="Maven Project"/>

        <stepsBeforeRunProvider
                implementation="com.esb.plugin.runconfig.module.beforetask.ESBModuleBuildBeforeTaskProvider"/>

        <!-- Module Builder -->
        <moduleBuilder builderClass="com.esb.plugin.module.builder.ESBModuleBuilder" id="ESB_MODULE_BUILDER" order="first"/>

        <!-- Services -->
        <applicationService serviceInterface="com.esb.plugin.service.application.http.ESBHttpService"
                            serviceImplementation="com.esb.plugin.service.application.http.impl.ESBHttpServiceImpl"/>

        <projectService serviceInterface="com.esb.plugin.service.project.sourcechange.SourceChangeService"
                        serviceImplementation="com.esb.plugin.service.project.sourcechange.impl.SourceChangeServiceImpl"/>

        <projectService serviceInterface="com.esb.plugin.service.project.toolwindow.ESBToolWindowService"
                        serviceImplementation="com.esb.plugin.service.project.toolwindow.impl.ESBToolWindowServiceImpl"/>

        <moduleService serviceInterface="com.esb.plugin.service.module.ComponentService"
                       serviceImplementation="com.esb.plugin.service.module.impl.ComponentServiceImpl"/>

        <!-- Program Runner and Executors -->
        <programRunner implementation="com.esb.plugin.runconfig.module.runner.ESBDeploymentRunner" order="first"/>
        <executor implementation="com.esb.plugin.runconfig.module.runner.ESBModuleDeployExecutor"/>
        <executor implementation="com.esb.plugin.runconfig.module.runner.ESBModuleUnDeployExecutor"/>


        <!-- Run Configurations -->
        <configurationType implementation="com.esb.plugin.runconfig.runtime.ESBRuntimeRunConfigurationType"/>
        <configurationType implementation="com.esb.plugin.runconfig.module.ESBModuleRunConfigurationType"/>

        <!-- Palette Components Tool Window -->
        <toolWindow id="ESB Components" anchor="right" icon="/icons/icon-16x-blue.png"
                    factoryClass="com.esb.plugin.editor.palette.PaletteFactory"/>
    </extensions>

    <actions>

    </actions>

    <project-components>
        <component>
            <interface-class>com.esb.plugin.service.project.sourcechange.SourceChangeService</interface-class>
            <implementation-class>com.esb.plugin.service.project.sourcechange.impl.SourceChangeServiceImpl
            </implementation-class>
        </component>
    </project-components>

</idea-plugin>