<idea-plugin>
    <id>com.esb.intellij.designer</id>
    <name>ESB Flow Designer</name>
    <vendor email="support@esb.com" url="http://www.esb.com">ESB</vendor>

    <description>
        <![CDATA[
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    <p>1.0.0-SNAPSHOT</p>
    <ul>
        <li>First Release</li>
    </ul>
    ]]>
    </description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File Templates -->
        <internalFileTemplate name="Maven Module"/>
        <internalFileTemplate name="Maven Project"/>

        <stepsBeforeRunProvider implementation="com.esb.plugin.ESBModuleBuildBeforeTaskProvider"/>

        <!-- Module Builder -->
        <moduleBuilder builderClass="com.esb.plugin.module.ESBModuleBuilder" id="ESB_MODULE_BUILDER" order="first"/>

        <!-- Services -->
        <applicationService serviceInterface="com.esb.plugin.service.application.runtime.ESBRuntimeService"
                            serviceImplementation="com.esb.plugin.service.application.runtime.impl.ESBRuntimeServiceImpl"/>

        <projectService serviceInterface="com.esb.plugin.service.project.filechange.ESBFileChangeService"
                        serviceImplementation="com.esb.plugin.service.project.filechange.impl.ESBFileChangeServiceImpl"/>


        <!-- Program Runner and Executors -->
        <programRunner implementation="com.esb.plugin.runner.ESBDeploymentRunner" order="first"/>
        <executor implementation="com.esb.plugin.runner.ESBModuleDeployExecutor"/>
        <executor implementation="com.esb.plugin.runner.ESBModuleUnDeployExecutor"/>


        <!-- Run Configurations -->
        <configurationType implementation="com.esb.plugin.runconfig.runtime.ESBRuntimeRunConfigurationType"/>
        <configurationType implementation="com.esb.plugin.runconfig.module.ESBModuleRunConfigurationType"/>

    </extensions>

    <actions>

    </actions>

</idea-plugin>